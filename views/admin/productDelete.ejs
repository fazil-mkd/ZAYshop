<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Soft Deleted Products</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome for Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/admin/productDelete.css">
</head>
<body>
       <!--------------------------------------------------->


       <%- include('./layout/sidenav.ejs') %>

       <!--------------------------------------------------->
    <div class="container container-custom">
        <h2 class="mb-4">
            <i class="fas fa-trash-restore-alt"></i> Soft Deleted Products
        </h2>

        <!-- Check for Deleted Products -->
        <% if (deletedProducts && deletedProducts.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Product Name</th>
                            <th>Recover</th>
                            <th>Permanent Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% deletedProducts.forEach(product => { %>
                            <tr>
                                <td data-label="Product Name"><%= product.name %></td>
                                <td data-label="Recover">
                                    <button class="btn btn-recover" data-id="<%= product._id %>">
                                        <i class="fas fa-undo"></i> Recover
                                    </button>
                                </td>
                                <td data-label="Permanent Delete">
                                    <button class="btn btn-delete" data-id="<%= product._id %>">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <!-- Empty State -->
            <div class="empty-state">
                <i class="fas fa-box-open"></i>
                <h3>No Deleted Products</h3>
                <p>There are no products in the soft-deleted list.</p>
            </div>
        <% } %>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/admin/productDelete.js">
 
    </script>
</body>
</html>
