<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Category</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"
    />
    <link
      href="https://unpkg.com/cropperjs@1.5.12/dist/cropper.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/admin/categoryUpdate.css" />
  </head>
  <body>
    <%- include('./layout/sidenav.ejs') %>

    <div class="container-fluid">
      <div class="category-container mt-5">
        <h2 class="text-center mb-4">Update Category</h2>

        <!-- Feedback Message -->
        <div
          id="feedbackMessage"
          class="feedback-message alert"
          style="display: none"
        ></div>

        <form
          id="updateCategoryForm"
          novalidate
          method="POST"
          action="/admin/category/update"
          enctype="multipart/form-data"
        >
          <!-- Hidden input for category ID -->
          <input
            type="hidden"
            id="categoryId"
            name="categoryId"
            value="<%= category._id %>"
          />

          <!-- Category Name -->
          <div class="mb-3">
            <label for="categoryName" class="form-label">Category Name</label>
            <input
              type="text"
              class="form-control"
              id="categoryName"
              name="categoryName"
              placeholder="Enter category name"
              value="<%= category.name %>"
              required
              minlength="3"
              maxlength="50"
            />
            <div
              id="nameError"
              class="error-message text-danger"
              style="display: none"
            >
              <i class="bi bi-exclamation-circle me-1"></i>
              Name must be 3-50 characters long
            </div>
          </div>

          <!-- Image Upload -->
          <div class="photo-upload-container mb-3 text-center">
            <div class="round-photo-input" id="photoUploadContainer">
              <input
                type="file"
                class="photo-input"
                id="categoryImage"
                name="categoryImage"
                accept="image/*"
              />
              <div
                id="photoPlaceholder"
                class="text-center"
                style="display: <%= category.image ? 'none' : 'block' %>"
              >
                <i class="bi bi-cloud-upload fs-1 text-muted"></i>
                <p class="text-muted">Click to upload image</p>
              </div>
              <img
                id="roundPreview"
                class="photo-preview"
                src="<%= category.image || '' %>"
                alt="Category Photo"
                style="display: <%= category.image ? 'block' : 'none' %>;"
              />
            </div>
            <button
              type="button"
              class="btn btn-link btn-remove-image"
              id="removeImageBtn"
              style="display: <%= category.image ? 'inline-block' : 'none' %>;"
            >
              <i class="bi bi-trash me-1"></i>Remove Image
            </button>
            <div
              id="imageError"
              class="error-message text-danger"
              style="display: none"
            >
              <i class="bi bi-exclamation-circle me-1"></i>
              Please upload a category image
            </div>
          </div>

          <!-- Category Description -->
          <div class="mb-3">
            <label for="categoryDescription" class="form-label"
              >Description</label
            >
            <textarea
              class="form-control"
              id="categoryDescription"
              name="categoryDescription"
              rows="3"
              placeholder="Add a short description"
              required
              minlength="10"
              maxlength="200"
            >
<%= category.description %></textarea
            >
            <div
              id="descError"
              class="error-message text-danger"
              style="display: none"
            >
              <i class="bi bi-exclamation-circle me-1"></i>
              Description must be 10-200 characters long
            </div>
          </div>

          <!-- Crop Modal -->
          <div
            class="modal fade"
            id="cropModal"
            tabindex="-1"
            aria-labelledby="cropModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="cropModalLabel">Crop Image</h5>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  <img
                    id="cropModalImage"
                    src=""
                    alt="Image to crop"
                    style="max-width: 100%"
                  />
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Cancel
                  </button>
                  <button
                    type="button"
                    class="btn btn-primary"
                    id="cropConfirmBtn"
                  >
                    Crop
                  </button>
                </div>
              </div>
            </div>
          </div>

          <!-- Error Messages -->
          <div
            id="nameError"
            class="error-message text-danger"
            style="display: none"
          >
            <i class="bi bi-exclamation-circle me-1"></i>
            Name must be 3-50 characters long and contain only letters, numbers,
            and spaces.
          </div>
          <div
            id="descError"
            class="error-message text-danger"
            style="display: none"
          >
            <i class="bi bi-exclamation-circle me-1"></i>
            Description must be 10-200 characters long.
          </div>
          <div
            id="imageError"
            class="error-message text-danger"
            style="display: none"
          >
            <i class="bi bi-exclamation-circle me-1"></i>
            Please upload a valid image (JPG/PNG under 2MB).
          </div>

          <!-- Submit Button -->
          <div class="text-center">
            <button
              type="submit"
              class="btn btn-update text-white w-100"
              disabled
            >
              <i class="bi bi-pencil me-2"></i>Update Category
            </button>
          </div>
        </form>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/cropperjs@1.5.12/dist/cropper.min.js"></script>
    <script src="/js/admin/categoryUpdate.js"></script>
  </body>
</html>
