<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin/dashboard.css">
</head>
<body>
    <!-- Sidebar -->
    <%- include('./layout/sidenav.ejs') %>

    <div class="container-fluid">
        <div class="row g-3">
            <!-- Transaction History -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Transaction History</div>
                    <div class="card-body">
                        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                            <div>
                                <h1>$1200</h1>
                                <p>Total</p>
                            </div>
                            <div class="chart-container flex-grow-1" style="height: 300px;">
                                <canvas id="transactionChart"></canvas>
                            </div>
                        </div>
                        <div class="divider"></div>
                        <div class="d-flex justify-content-between flex-wrap">
                            <div>
                                <h3>Transferred Full Amount</h3>
                                <p>$236</p>
                            </div>
                            <div>
                                <h3>EMI Payments</h3>
                                <p>$593</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Today's Sales -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">Today's Sales</div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h2>$5k</h2>
                                <p>Total Sales</p>
                            </div>
                            <div>
                                <p>+5% from yesterday</p>
                            </div>
                        </div>
                        <div class="divider"></div>
                        <div class="d-flex justify-content-between">
                            <div>
                                <h3>500</h3>
                                <p>Total Orders</p>
                            </div>
                            <div>
                                <h3>9</h3>
                                <p>Products Sold</p>
                            </div>
                            <div>
                                <h3>12</h3>
                                <p>New Customers</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Customer Fulfillment -->
        <div class="row g-3">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">Customer Fulfillment</div>
                    <div class="card-body">
                        <div class="chart-container" style="height: 400px;">
                            <canvas id="customerChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add Maintenance -->
        <div class="row g-3">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">Add Maintenance</div>
                    <div class="card-body">
                        <form>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="start-time" class="form-label">Start Time</label>
                                    <input type="text" class="form-control" id="start-time" placeholder="dd-mm-yyyy">
                                </div>
                                <div class="col-md-6">
                                    <label for="end-time" class="form-label">End Time</label>
                                    <input type="text" class="form-control" id="end-time" placeholder="dd-mm-yyyy">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="message" class="form-label">Message</label>
                                <textarea class="form-control" id="message" rows="3" placeholder="Enter a message"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Add</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/js/admin/dashboard.js"></script>
</body>
</html>
