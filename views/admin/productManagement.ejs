<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Product Management Dashboard</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Font Awesome for icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

  <link rel="stylesheet" href="/css/admin/productManagement.css">
</head>

<body>
  <%- include('./layout/sidenav.ejs') %>

  <div id="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h4 class="card-title mb-0">Product Management</h4>
              <div class="search-container">
                <input type="text" class="form-control" placeholder="Search products">
                <button class="btn btn-primary">
                  <i class="fas fa-search"></i> Search
                </button>
              </div>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <% if (!products || products.length === 0) { %>
                <p class="text-center text-muted">Products are not available</p>
                <% } else { %>
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Category</th>
                      <th>Price</th>
                      <th>Stock</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% products.forEach((product) => { %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <img src="<%= product.images[0] %>" alt="<%= product.name %>" class="img-thumbnail me-2" style="width: 50px; height: 50px; object-fit: cover;">
                          <%= product.name %>
                        </div>
                      </td>
                      <td><%= product.category ? product.category.name : 'No Category' %></td>
                      <td>$<%= product.price.toFixed(2) %></td>
                      <td>
                        <span class="badge <%= product.stock > 10 ? 'bg-success' : 'bg-warning' %>">
                          <%= product.stock %> in stock
                        </span>
                      </td>
                      <td>
                        <div class="d-flex gap-2">
                          <a href="/admin/productManagement/update/<%= product._id %>" class="btn btn-sm btn-action btn-primary">
                            <i class="fas fa-edit"></i> Edit
                          </a>
                          <button class="btn btn-sm btn-action btn-delete" data-id="<%= product._id %>">
                            <i class="fas fa-trash"></i> Delete
                          </button>
                        </div>
                      </td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
                <% } %>
              </div>
            </div>
            <!-- Pagination Controls -->


            <div class="d-flex justify-content-center align-items-center mt-3">
              <div class="pagination-container text-center">
                <span class="me-2">Page <%= currentPage %> of <%= totalPages %></span>
                <nav aria-label="Page navigation">
                  <ul class="pagination pagination-sm justify-content-center">
                    <% if (currentPage > 1) { %>
                    <li class="page-item">
                      <a class="page-link" href="?page=<%= currentPage - 1 %>" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                      </a>
                    </li>
                    <% } %>
                    <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                      <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>
                    <% } %>
                    <% if (currentPage < totalPages) { %>
                    <li class="page-item">
                      <a class="page-link" href="?page=<%= currentPage + 1 %>" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                      </a>
                    </li>
                    <% } %>
                  </ul>
                </nav>
              </div>
            </div>


          </div>

          <div class="action-buttons">
            <a href="/admin/productManagement/add" class="btn btn-create btn-action">
              <i class="fas fa-plus-circle"></i> Create New Product
            </a>
            <button class="btn btn-warning btn-action" id="btn-del-prod">
              <i class="fas fa-archive"></i> View Deleted Products
            </button>
          </div>


        </div>
      </div>
    </div>
  </div>



  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script src="/js/admin/productManagement.js"></script>
</body>

</html>