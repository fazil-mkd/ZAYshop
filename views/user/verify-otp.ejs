<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f9f9f9;
        }
        .container {
            background: #fff;
            padding: 20px 30px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 90%;
            max-width: 400px;
        }
        h1 {
            margin-bottom: 10px;
            color: #333;
        }
        p {
            font-size: 14px;
            color: #666;
            margin-bottom: 20px;
        }
        #email {
            font-weight: bold;
            color: #333;
        }
        .otp-input {
            margin-bottom: 20px;
        }
        .otp-input input {
            width: 100%;
            height: 45px;
            text-align: center;
            font-size: 18px;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin: 0;
        }
        .otp-input input:focus {
            border-color: #007bff;
            outline: none;
        }
        button {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
        }
        button:hover {
            background-color: #0056b3;
        }
        .resend-text {
            font-size: 14px;
            color: #666;
            margin-top: 15px;
        }
        .resend-link {
            color: #007bff;
            cursor: pointer;
            text-decoration: underline;
        }
        .resend-link:hover {
            text-decoration: none;
        }
        #timer {
            font-weight: bold;
            margin-left: 5px;
            color: #333;
        }
        #timer.expired {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>OTP Verification</h1>
        <p>Enter the OTP you received at <span id="email"></span></p>
        <form id="otpForm">
            <div class="otp-input">
                <input type="text" id="otpInput" maxlength="6" placeholder="Enter OTP" required>
            </div>
            <button type="button" id="verifyButton">Verify</button>
            <div class="resend-text">
                Didn't receive the code? 
                <span class="resend-link" onclick="resendOTP()">Resend Code</span>
                <span id="timer"></span>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const otpInput = document.getElementById('otpInput');
        const timerDisplay = document.getElementById('timer');
        const emailSpan = document.getElementById('email');
        let timeLeft = 60; 
        let timerId;
        let canResend = true;

       

        function startTimer() {
            timerId = setInterval(() => {
                if (timeLeft <= 0) {
                    clearInterval(timerId);
                    timerDisplay.textContent = "Code expired";
                    timerDisplay.classList.add('expired');
                    otpInput.disabled = true;
                    canResend = false;
                } else {
                    const minutes = Math.floor(timeLeft / 60);
                    const seconds = timeLeft % 60;
                    timerDisplay.textContent = `(${minutes}:${seconds.toString().padStart(2, '0')})`;
                    timeLeft--;
                }
            }, 1000);
        }

        function resendOTP() {
            if (canResend) {
                fetch('/resend-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ email: emailSpan.textContent }),
                })
                .then(response => response.json())
                .then(res => {
                    if (res.success) {
                        Swal.fire({
                            title: 'OTP Resent!',
                            text: 'A new OTP has been sent to your email.',
                            icon: 'success',
                            confirmButtonText: 'OK'
                        });
                        timeLeft = 60;
                        otpInput.value = '';
                        otpInput.disabled = false;
                        otpInput.focus();
                        clearInterval(timerId);
                        timerDisplay.classList.remove('expired');
                        startTimer();
                    } else {
                        Swal.fire({
                            title: 'Error',
                            text: res.message,
                            icon: 'error',
                            confirmButtonText: 'OK'
                        });
                    }
                })
                .catch(() => {
                    Swal.fire({
                        title: 'Error',
                        text: 'Failed to resend OTP. Please try again later.',
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                });
            } else {
                Swal.fire({
                    title: 'Error',
                    text: 'Cannot resend code. Time has expired.',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            }
        }

        document.getElementById('verifyButton').addEventListener('click', function() {
            const otp = otpInput.value;

            if (otp.length === 6) {
                fetch('/verify-otp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ otp: otp })
                })
                .then(response => response.json())
                .then(res => {
                    if (res.success) {
                        Swal.fire({
                            icon: "success",
                            title: "OTP Verified Successfully",
                            showConfirmButton: false,
                            timer: 1500,
                        }).then(() => {
                           
                            window.location.href = "/login"; 
                        });
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Error",
                            text: res.message, 
                        });
                    }
                })
                .catch(() => {
                    Swal.fire({
                        icon: "error",
                        title: "Invalid OTP",
                        text: "Please try again.",
                    });
                });
            } else {
                Swal.fire({
                    title: 'Invalid OTP',
                    text: 'Please enter a valid 6-digit OTP.',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            }
        });

        startTimer(); 
    </script>
</body>
</html>
