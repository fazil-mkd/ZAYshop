<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fashion Login</title>
    <link rel="stylesheet" href="/assets/css/login.css">
    
 
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  
    <script>
     
      function validateForm(event) {
        
        const email = document.getElementById('email');
        const password = document.getElementById('password');
        

        if (email.value === '') {
          event.preventDefault();  
          Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Please enter your email!',
          });
          return false;
        }
  
     
        if (password.value === '') {
          event.preventDefault();  n
          Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Please enter your password!',
          });
          return false;
        }
  
        return true; 
      }


      function togglePasswordVisibility() {
    const passwordInput = document.getElementById('password');
    const toggleButton = document.querySelector('.toggle-password');
    
   
    if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        toggleButton.textContent = 'ðŸ˜‘';  
    } else {
        passwordInput.type = 'password';
        toggleButton.textContent = 'ðŸ‘€';  
    }
}
    </script>
  </head>
  
</head>
<body>
  <div class="login-container">

    <div class="image-side">
      <img  src="/images/login.png" alt="Fashion" class="fashion-image">
    </div>

   
    <div class="form-side">
      <div class="form-content">
        <h1>Welcome Back!</h1>
        <p>Sign in to continue your fashion journey.</p>
        <form method="post" action="/login" onsubmit="return validateForm(event)">
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Enter your email" >
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <div class="password-wrapper">
                <input type="password" id="password" name="password" placeholder="Enter your password">
                <button type="button" class="toggle-password" onclick="togglePasswordVisibility()">ðŸ‘€</button>
            </div>
        </div>
          <% if (locals.message && message.length > 0) { %>
            <div style="color: rgb(255, 0, 0);" class="alert alert-danger text-center">
              <%= message %>
            </div>
          <% } %>

          <div class="form-options">
           
            <a href="/forget" class="forgot-password">Forgot Password?</a>
          </div>
          <button type="submit" class="btn">Sign In</button>
        </form>
        <p class="signup-link">Don't have an account? <a href="/signUp">Sign Up</a></p>
      </div>
    </div>
  </div>
  <script>

const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get("error") === "blocked") {
        Swal.fire("Access Denied", "Your account is blocked. Contact support.", "error");
    }



  </script>
</body>
</html>