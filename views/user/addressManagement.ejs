<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Address Management</title>
    <link rel="stylesheet" href="/assets/css/addressManagement.css">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

</head>
<body>
    <button class="dash" onclick="window.location.href='/profile/<%= user._id %>'">Profile</button>
    <div class="tab-pane active" id="address" role="tabpanel" aria-labelledby="address-tab">
      
        <div class="address-box">
            
            <!-- Address List -->
         
            <div id="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h4 class="card-title mb-0">Address Management</h4>
                                    <div class="search-container">
                                        <!-- <input type="text" class="form-control" placeholder="Search addresses" id="search-input"> -->
                                        <!-- <button class="btn btn-primary" id="search-btn">
                                            <i class="fas fa-search"></i> Search
                                        </button> -->
                                    
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <% if (addresses.length === 0) { %>
                                            <p class="text-center text-muted">No addresses available</p>
                                        <% } else { %>
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Name</th>
                                                        <th>Address</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% addresses.forEach((address) => { %>
                                                        <tr id="address_<%= address._id %>">
                                                            <td><%= address.fullName %></td>
                                                            <td class="addressDetail">
                                                                <span class="bullet">•</span>Street: <%= address.streetAddress %> 
                                                              
                                                                <span class="bullet">•</span>  City: <%= address.city %> 
                                                                
                                                                <span class="bullet">•</span> State: <%= address.state %> 
                                                              
                                                                <span class="bullet">•</span>   Country: <%= address.country %> 
                                                              
                                                                <span class="bullet">•</span>  Pincode: <%= address.pincode %>

                                                                <span class="bullet">•</span>  Phone: <%= address.phone %>

                                                                <span class="bullet">•</span>  AltPhone: <%= address.altPhone %>

                                                                <span class="bullet">•</span>  AddressType: <%= address.addressType %>
                                                            </td>
                                                            <td>
                                                                <div class="d-flex gap-2">
                                                                    <a href="/update-Address/<%= address._id %>" class="btn btn-sm btn-action btn-primary">Update Address</a>
                                                                    <button class="btn btn-sm btn-action btn-delete" data-id="<%= address._id %>">
                                                                        <i class="fas fa-trash"></i> Delete Address
                                                                    </button>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    <% }); %>
                                                </tbody>
                                            </table>
                                        <% } %>
                                    </div>
                                </div>

           
            <button type="button" class="address-btn" onclick="addAddress()">Add New Address</button>

            
            <form method="post" action="/add-address" id="addressForm" style="display:none;" onsubmit="submitForm(event)">
                <h6>Enter New Address</h6>
            
                <label for="fullName">Full Name:</label>
                <input type="text" name="fullName" id="fullName" placeholder="Enter your full name" required>
                <span class="error-message" id="fullNameError"></span>
            
                <label for="streetAddress">Street Address:</label>
                <input type="text" name="streetAddress" id="streetAddress" placeholder="Street Address" required>
                <span class="error-message" id="streetAddressError"></span>
            
                <label for="aptNumber">Apartment/Unit Number (optional):</label>
                <input type="text" name="aptNumber" id="aptNumber" placeholder="Apartment or Unit Number">
                <span class="error-message" id="aptNumberError"></span>
            
                <label for="city">City:</label>
                <input type="text" name="city" id="city" placeholder="Enter city" required>
                <span class="error-message" id="cityError"></span>
            
                <label for="state">State/Province:</label>
                <input type="text" name="state" id="state" placeholder="Enter state/province" required>
                <span class="error-message" id="stateError"></span>
            
                <label for="pincode">Postal Code:</label>
                <input type="text" name="pincode" id="pincode" placeholder="Postal/Zip Code" required>
                <span class="error-message" id="pincodeError"></span>
            
                <label for="country">Country:</label>
                <input type="text" name="country" id="country" placeholder="Enter country" required>
                <span class="error-message" id="countryError"></span>
            
                <label for="phone">Phone Number:</label>
                <input type="tel" name="phone" id="phone" placeholder="Enter phone number" required>
                <span class="error-message" id="phoneError"></span>
            
                <label for="altPhone">Alternate Phone Number (optional):</label>
                <input type="tel" name="altPhone" id="altPhone" placeholder="Alternate phone number">
                <span class="error-message" id="altPhoneError"></span>
            
                <label for="addressType">Address Type:</label>
                <select id="addressType" name="addressType" required>
                    <option value="home">Home</option>
                    <option value="work">Work</option>
                    <option value="billing">Billing</option>
                    <option value="shipping">Shipping</option>
                </select>
            
                <button type="submit">Save Address</button>
                <button type="button" onclick="cancelAdd()">Cancel</button>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/js/bootstrap.bundle.min.js"></script>
    
    <script>
        let editingAddress = null;

        
        function addAddress() {
            editingAddress = null;
            const form = document.getElementById('addressForm');
            if (form) {
                form.reset();
                document.querySelector('.address-btn').style.display = 'none';
                form.style.display = 'block';
            } else {
                console.error("Form with id 'addressForm' not found!");
            }
        }

        function cancelAdd() {
            const form = document.getElementById('addressForm');
            if (form) {
                form.style.display = 'none';
                document.querySelector('.address-btn').style.display = 'block';
            }
        }

        async function submitForm(event) {
    event.preventDefault(); 

    const patterns = {
        fullName: /^[A-Za-z]+$/,
        streetAddress: /^[A-Za-z0-9#,-]+$/,
        aptNumber: /^[A-Za-z0-9#,-]*$/, 
        city: /^[A-Za-z]+$/,
        state: /^[A-Za-z]+$/,
        pincode: /^\d{4,10}$/,
        country: /^[A-Za-z]+$/,
        phone: /^\d{10,15}$/,
        altPhone: /^\d{10,15}$/
    };

    const fields = ["fullName", "streetAddress", "aptNumber", "city", "state", "pincode", "country", "phone", "altPhone"];
    let isValid = true;

    fields.forEach(field => {
        const input = document.getElementById(field);
        const errorSpan = document.getElementById(field + "Error");
        if (!patterns[field].test(input.value)) {
            errorSpan.textContent = `Invalid ${field.replace(/([A-Z])/g, ' $1')}.`;
            isValid = false;
        } else {
            errorSpan.textContent = ""; 
        }
    });

    if (!isValid) return; 

    const form = event.target;
    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());

    try {
        const response = await fetch(form.action, {
            method: form.method,
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data),
        });

        const result = await response.json();
        if (response.ok) {
            Swal.fire({ title: 'Success!', text: result.message, icon: 'success' }).then(() => {
                location.reload(); 
            });
            cancelAdd();
        } else {
            Swal.fire({ title: 'Error', text: result.message || 'Error submitting form', icon: 'error' });
        }
    } catch (error) {
        console.error('Error:', error);
        Swal.fire({ title: 'Error', text: 'An error occurred', icon: 'error' });
    }
}





        document.addEventListener('DOMContentLoaded', () => {
  const deleteButtons = document.querySelectorAll('.btn-delete');

  deleteButtons.forEach((button) => {
    button.addEventListener('click', async (e) => {
      e.preventDefault(); 

      const addressId = button.getAttribute('data-id');
      const addressItem = button.closest('.address-item');

      
      const { value: confirmDelete } = await Swal.fire({
        title: 'Are you sure?',
        text: 'Do you really want to delete this address?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes, delete it!',
        cancelButtonText: 'Cancel',
      });

      if (!confirmDelete) return;

      try {
     
        const response = await fetch(`/delete-address/<%= user._id %>/${addressId}`, {
          method: 'DELETE',
        });

        if (response.ok) {
         
          const data = await response.json();
          await Swal.fire({
            title: 'Deleted!',
            text: data.message || 'Address deleted successfully.',
            icon: 'success',
          });

    
          location.reload();
        } else {
          const error = await response.json();
          await Swal.fire({
            title: 'Error!',
            text: error.message || 'Error deleting the address.',
            icon: 'error',
          });
        }
      } catch (err) {
        console.error('Error:', err);
        await Swal.fire({
          title: 'Error!',
          text: 'An error occurred while deleting the address.',
          icon: 'error',
        });
      }
    });
  });
});





    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>